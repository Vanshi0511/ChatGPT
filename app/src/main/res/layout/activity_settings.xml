<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.SettingsActivity">

    <Toolbar
        android:id="@+id/toolbar_settings"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:fontFamily="@font/bold"
            android:text="Settings"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_18sdp" />

        <ImageView
            android:id="@+id/cross_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/_10sdp"
            android:padding="8dp"
            android:src="@drawable/ic_cross" />

    </Toolbar>

    <TextView
        android:id="@+id/support"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_7sdp"
        android:text="Support"
        android:textSize="@dimen/_15sdp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_7sdp"
        android:backgroundTint="@color/grey_200"
        app:cardCornerRadius="@dimen/_3sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/helplayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:background="@drawable/setting_border"
                android:orientation="horizontal"
                android:weightSum="5">

                <ImageView
                    android:id="@+id/help_image"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_weight="0.2"
                    android:padding="@dimen/_4sdp"
                    android:src="@drawable/helpimage" />

                <TextView
                    android:id="@+id/help_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_marginEnd="@dimen/_40sdp"
                    android:layout_weight="4.8"
                    android:fontFamily="@font/medium"
                    android:text="Help"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp" />

                <ImageView
                    android:id="@+id/help_arrow"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_weight="0"
                    android:src="@drawable/ic_arrow" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/yourplan_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:background="@drawable/setting_border"
                android:orientation="horizontal"
                android:weightSum="5">

                <ImageView
                    android:id="@+id/yourplan_image"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_weight="0.2"
                    android:padding="@dimen/_4sdp"
                    android:src="@drawable/yourplanimage" />

                <TextView
                    android:id="@+id/yourplan_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_marginEnd="@dimen/_40sdp"
                    android:layout_weight="4.8"
                    android:fontFamily="@font/medium"
                    android:text="Your Plan"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp" />

                <ImageView
                    android:id="@+id/yourplan_arrow"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_weight="0"
                    android:src="@drawable/ic_arrow" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/restorePurchases_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_7sdp"
                android:background="@drawable/setting_border"
                android:orientation="horizontal"
                android:weightSum="5">

                <ImageView
                    android:id="@+id/restorePurchases_image"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_weight="0.2"
                    android:padding="@dimen/_4sdp"
                    android:src="@drawable/restorepurchases" />

                <TextView
                    android:id="@+id/restorePurchases_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_marginEnd="@dimen/_40sdp"
                    android:layout_weight="4.8"
                    android:fontFamily="@font/medium"
                    android:text="Restore Purchases"

                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp" />

                <ImageView
                    android:id="@+id/restorePurchases_arrow"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_weight="0"
                    android:src="@drawable/ic_arrow" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_7sdp"
        android:text="About"
        android:textSize="@dimen/_15sdp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_7sdp"
        android:backgroundTint="@color/grey_200"
        app:cardCornerRadius="@dimen/_3sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/rateuslayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:background="@drawable/setting_border"
                android:orientation="horizontal"
                android:weightSum="5">

                <ImageView
                    android:id="@+id/rateus_image"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_weight="0.2"
                    android:padding="@dimen/_4sdp"
                    android:src="@drawable/rateusimage" />

                <TextView
                    android:id="@+id/rateus_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_marginEnd="@dimen/_40sdp"
                    android:layout_weight="4.8"
                    android:fontFamily="@font/medium"
                    android:text="Rate Us"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp" />

                <ImageView
                    android:id="@+id/rateus_arrow"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_weight="0"
                    android:src="@drawable/ic_arrow" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/sharemajier_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:background="@drawable/setting_border"
                android:orientation="horizontal"
                android:weightSum="5">

                <ImageView
                    android:id="@+id/sharemajier_image"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_weight="0.2"
                    android:padding="@dimen/_4sdp"
                    android:src="@drawable/sharemajier" />

                <TextView
                    android:id="@+id/sharemajier_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_marginEnd="@dimen/_40sdp"
                    android:layout_weight="4.8"
                    android:fontFamily="@font/medium"
                    android:text="Share Majier"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp" />

                <ImageView
                    android:id="@+id/sharemajier_arrow"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_weight="0"
                    android:src="@drawable/ic_arrow" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/termsofservices_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:background="@drawable/setting_border"
                android:orientation="horizontal"
                android:weightSum="5">

                <ImageView
                    android:id="@+id/termsofservices_image"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_weight="0.2"
                    android:padding="@dimen/_4sdp"
                    android:src="@drawable/termsofservices" />

                <TextView
                    android:id="@+id/termsofservices_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_marginEnd="@dimen/_40sdp"
                    android:layout_weight="4.8"
                    android:fontFamily="@font/medium"
                    android:text="Terms of Services"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp" />

                <ImageView
                    android:id="@+id/termsofservices_arrow"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_weight="0"
                    android:src="@drawable/ic_arrow" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/privacypolicy_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginBottom="@dimen/_7sdp"
            android:background="@drawable/setting_border"
            android:orientation="horizontal"
            android:weightSum="5">

            <ImageView
                android:id="@+id/privacypolicy_image"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_weight="0.2"
                android:padding="@dimen/_4sdp"
                android:src="@drawable/privacypolicy" />

            <TextView
                android:id="@+id/privacypolicy_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginEnd="@dimen/_40sdp"
                android:layout_weight="4.8"
                android:fontFamily="@font/medium"
                android:text="Privacy Policy"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp" />

            <ImageView
                android:id="@+id/privacypolicy_arrow"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_weight="0"
                android:src="@drawable/ic_arrow" />
        </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:text="You are using version 1.0.0"
        android:layout_gravity="center"
        android:textSize="@dimen/_10sdp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="We are not associated or affiliated with OpenAI."
        android:layout_gravity="center"
        android:textSize="@dimen/_10sdp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/_15sdp"
        android:layout_gravity="center">
    <ImageView
        android:id="@+id/left_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="3dp"
        android:scaleType="fitXY"
        android:src="@drawable/logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Magier"
        android:textColor="@color/black"
        android:fontFamily="@font/bold"
        android:layout_gravity="center"
        android:drawablePadding="@dimen/_80sdp"
        android:textSize="@dimen/_15sdp" />
    </LinearLayout>
</LinearLayout>